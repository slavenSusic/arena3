---
import BaseLayout from "../layouts/BaseLayout.astro";
import resume from '../assets/resume.svg'
import { Image } from "astro:assets";
import cv from '../assets/cv.svg'
import phone from '../assets/phone.svg'
import skill from '../assets/skill.svg'
import people from '../assets/people.svg'
import chair from '../assets/chair.svg'
import kolege from '../assets/kolege.svg'
import lokacija from '../assets/lokacija.svg'
import edukacija from '../assets/edukacija.svg'
import grickalice from '../assets/grickalice.svg'
import izvrsnost from '../assets/izvrsnost.svg'

const perkz = [
  {
    icon: chair.src,
  
    title: "Moderni uredi",
    description: "Uživajte dok radite u modernom prostranom uredu"
  },
  {
    icon: kolege.src,
 
    title: "Odlične kolege",
    description: "U digital areni, trudimo se biti izvrsni kolege, predani poslu i uvijek smo spremni za međusobnu podršku."
  },
  {
    icon: lokacija.src,
  
    title: "Lokacija",
    description: "Pristupačna lokacija, privatnim ili javnim prijevozom"
  },
  {
    icon: edukacija.src,
 
    title: "Edukacija",
    description: "Svojim zaposlenicima nudimo konstantne edukacije kroz rad i seminare"
  },
  {
    icon: grickalice.src,
  
    title: "Grickalice",
    description: "Uživajte u neograničenoj količini grickalica i kave"
  },
  {
    icon: izvrsnost.src,
  
    title: "Nagrade za izvrsnost",
    description: "Na kraju svake godine prepoznajemo izvrsnog zaposlenika te to i nagrađujemo"
  }
];





const data = [
    {
        position: 'Frontend Developer',
        location: 'New York',
        type: 'Full-Time | Part Time'
    },
    {
        position: 'Data Scientist',
        location: 'San Francisco',
        type: 'Full-Time | Contract'
    },
    {
        position: 'UI/UX Designer',
        location: 'Los Angeles',
        type: 'Contract | Part Time'
    },
    {
        position: 'Product Manager',
        location: 'Chicago',
        type: 'Remote | Contract'
    },
    {
        position: 'Software Engineer',
        location: 'Boston',
        type: 'Part-Time | Contract'
    },
    {
        position: 'Software Engineer',
        location: 'Remote',
        type: 'Part-Time | Contract'
    }
];

const zaposljavanje = [
    {
      icon: cv.src,
        headline: 'Podnošenje molbe',
        paragraf: 'Pošaljite CV i zamolbu za radno mjesto ukoliko zadovoljavate uvijete radnog mjesta'
    },
    {
      icon: phone.src,
      headline: 'Inicialni invervju',
        paragraf: 'Ukoliko ispunjavate uvijete bit ćete pozvani na telefonski razgovor'
    },
    {
      icon: skill.src,
      headline: 'Test znanja',
        paragraf: 'Nakon usjpješno obavljenog razgovora slijedi test znanja i vještina ovino o radnom mjestu za koje ste se prijavili'
    },
    {
      icon: people.src,
      headline: 'Finalni razgovor',
        paragraf: 'Zadnji korak prije zapošljavanja je finalni razgovor sa CEO-om i članovima uprave'
    },

 

];
---

<BaseLayout>
<div>
<!-- HERO -->
<div class="dark:bg-gray-900 bg-white sm:h-[80vh] pt-20">
  <div class="bg-white dark:bg-gray-900 flex flex-col justify-center md:flex-row relative z-15 items-center">
    <div class="flex flex-col relative z-15 md:w-1/2 lg:w-full">
      <h1 class="sm:text-5xl md:text-6xl lg:text-8xl xl:text-9xl font-black whitespace-pre leading-none dark:text-gray-100 text-gray-800 text-center sm:text-left">Karijera u
<span class="text-green-500">digital areni</span>
      </h1>
      <p class="text-sm text-left sm:text-base text-gray-700 dark:text-gray-100 sm:text-left">
        Pridružite se našem timu i transformirajte budućnost: Istražite uzbudljive mogućnosti karijere s nama.
      </p>
      <div class="flex justify-center sm:justify-start mt-6">
        <a href="#" class="uppercase py-2 px-6 sm:py-4 sm:px-8 rounded-lg bg-green-500 border-2 border-transparent text-gray-100 text-sm sm:text-md mr-2 sm:mr-4 hover:bg-green-400 hover:text-white">
          Pogledajte otvorene poslove
        </a>
      </div>
    </div>
    <div class="sm:w-1/2 relative pt-5 lg:pt-0">
      <Image src={resume} alt="career photo" class="w-full" />
    </div>
  </div>

</div>

<!-- život u grid-cols-3  gap-10 grid-rows-3 -->
<div class="flex flex-col-reverse lg:flex-row py-10 items-center justify-center gap-x-10">
<div class="grid  grid-rows-3 gap-10 grid-cols-1 md:grid-cols-2 md:max-w-xl mx-auto">
  {perkz.map((perk) => {
    return (
    <div class=" even:mt-5 even:-mb-5 border-2 border-gray-200 rounded-2xl  p-5">
       <div class="rounded-2xl   border-gray-100">
          <div class="w-1/6 md:w-1/4"><img src={perk.icon} alt="icon" class="" /></div>
          <h3 class="dark:text-gray-100 text-2xl font-semibold"> {perk.title}</h3>
          <p class="text-base dark:text-gray-300 text-gray-800">{perk.description}</p>
      </div>
  </div>
    )
  
          
  } )}


<div class="absolute left-1/2 top-20 -translate-x-1/2 blur-3xl xl:top-96 xl:right-70 " aria-hidden="true">
  <div class="aspect-[1155/678] lg:w-[72.1875rem] w-1/2 bg-gradient-to-tr from-blue-200 to-blue-300 opacity-30" style="clip-path: polygon(55.2% 10.1%, 100% 45.6%, 97.5% 10.9%, 85.5% 0.1%, 80.7% 12%, 72.5% 42.5%, 60.2% 52.4%, 42.4% 28.1%, 47.5% 38.3%, 45.2% 14.5%, 27.5% 56.7%, 0.1% 44.9%, 17.9% 80%, 27.6% 56.8%, 76.1% 77.7%, 55.2% 10.1%);"></div>
</div>
</div>
<div class="text text-center md:p-4">
  <div class="text-center">
    <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-5xl font-semibold text-gray-900 dark:text-gray-100">
      Life-work balance
    </h2>
    <div class="text-center mb-6 sm:mb-10 max-w-2xl">
      <span class="inline-block w-1 h-1 rounded-full bg-green-500 ml-1"></span>
      <span class="inline-block w-3 h-1 rounded-full bg-green-500 ml-1"></span>
      <span class="inline-block w-20 sm:w-40 h-1 rounded-full bg-green-500"></span>
      <span class="inline-block w-3 h-1 rounded-full bg-green-500 ml-1"></span>
      <p class="text-sm sm:text-lg text-left text-gray-900 dark:text-gray-100">
        Dobrodošli u digitalnu arenu gdje se pruža prilika za osobni i profesionalni rast kao nikada prije! Naš tim stručnjaka radi na projektima koji mijenjaju svijet, koristeći najnovije tehnologije i inovacije. Ovdje vam nudimo priliku da budete dio nečega većeg, da istražujete granice i ostvarujete svoj puni potencijal.
      </p>
      <p class="text-sm sm:text-lg text-left pt-3 sm:pt-5 text-gray-900 dark:text-gray-100">
        No, kod nas ne vrednujemo samo poslovni uspjeh. Shvaćamo važnost ravnoteže između posla i života te podržavamo naše zaposlenike u postizanju Life Work balansa. Radimo zajedno kao tim, ali također cijenimo vaše vrijeme za obitelj i osobne interese. Ovdje se ne radimo samo za plaću, već i zbog strasti prema onome što radimo.
      </p>
    
    </div>
  </div>
  <div class="flex justify-center sm:justify-start mt-6 pb-10">
    <a href="#" class="uppercase py-2 px-6 sm:py-4 sm:px-8 rounded-lg bg-green-500 border-2 border-transparent text-gray-100 text-sm sm:text-md mr-2 sm:mr-4 hover:bg-green-400 hover:text-white">
      Pogledajte više
    </a>
  </div>
</div>
</div>

<!-- trenutno otvorene pozicije -->

<div class="text text-center p-4 py-20 ">
  <div class="text-center">
    <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-5xl font-semibold text-gray-900 dark:text-gray-100">
 Otvoreni poslovi
    </h2>
    <div class="text-center mb-6 sm:mb-10 ">
      <span class="inline-block w-1 h-1 rounded-full bg-green-500 ml-1"></span>
      <span class="inline-block w-3 h-1 rounded-full bg-green-500 ml-1"></span>
      <span class="inline-block w-20 sm:w-40 h-1 rounded-full bg-green-500"></span>
      <span class="inline-block w-3 h-1 rounded-full bg-green-500 ml-1"></span>
      
    
    </div>
  </div>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 max-w-5xl gap-10 mx-auto ">
   
    
    {data.map((podatak) => {
      return (
        <div class="border rounded-2xl">

          <div>
            <div class="flex items-center justify-start">
            <div class="icon w-1/6 p-2">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32"><path fill="#4caf50" d="M16 18a5 5 0 1 1 5-5a5.006 5.006 0 0 1-5 5Zm0-8a3 3 0 1 0 3 3a3.003 3.003 0 0 0-3-3Z"/><path fill="#4caf50" d="m16 30l-8.436-9.949a35.076 35.076 0 0 1-.348-.451A10.889 10.889 0 0 1 5 13a11 11 0 0 1 22 0a10.884 10.884 0 0 1-2.215 6.597l-.001.003s-.3.394-.345.447ZM8.812 18.395c.002 0 .234.308.287.374L16 26.908l6.91-8.15c.044-.055.278-.365.279-.366A8.901 8.901 0 0 0 25 13a9 9 0 1 0-18 0a8.905 8.905 0 0 0 1.813 5.395Z"/></svg>
       
         
         </div>
         <div>
          <span class="bg-green-100 text-green-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-full dark:bg-green-900 dark:text-green-300">{podatak.location}</span>
          </div>
        </div>
          <p class="dark:text-gray-100 text-left pl-2">{podatak.position}</p>
          <p class="dark:text-gray-100 text-left pl-2 text-sm ">{podatak.type}</p>
          <button class="bg-green-500 rounded-2xl px-4 text-xl mb-4">
         <a class="text-inherit hover:text-green-800 transition duration-200" href="">Prijavi se</a> 
            </button>
        </div>
         </div>
      )
    })}
    </div>
  </div>
 </div>
<!-- proces zapošljavanja -->
<div class="text text-center p-4 py-20 relative ">
  <div class="text-center">
    <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-5xl font-semibold text-gray-900 dark:text-gray-100">
Proces zapošljavanja u digital areni
    </h2>
    <div class="text-center mb-6 sm:mb-10 ">
      <span class="inline-block w-1 h-1 rounded-full bg-green-500 ml-1"></span>
      <span class="inline-block w-3 h-1 rounded-full bg-green-500 ml-1"></span>
      <span class="inline-block w-20 sm:w-40 h-1 rounded-full bg-green-500"></span>
      <span class="inline-block w-3 h-1 rounded-full bg-green-500 ml-1"></span>
      
    
    </div>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 items-stretch justify-center gap-10 relative">
    {zaposljavanje.map((zap) => (
      <div class="border-2 border-green-500 rounded-xl p-3 dark:bg-gray-900 max-w-lg flex flex-col">
        <img src={zap.icon} alt="icon" class="w-1/6"/>
        <div class="text-center dark:text-gray-100 flex flex-col justify-between h-full">
          <h3 class="text-2xl">{zap.headline}</h3>
          <p class="text-base pb-3 max-w-sm">{zap.paragraf}</p>
        </div>
      </div>
    ))}
  </div>
 <div class="absolute left-1/2 -z-10 top-0 -translate-x-1/2 blur-3xl xl:-top-[30rem] xl:right-30" aria-hidden="true">
  <div class="aspect-[1155/678] w-1/3  bg-gradient-to-tr from-blue-200 to-[#352bc5] opacity-30" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
</div>
</div>
</div>
</div>
</div>



  </BaseLayout>